<div class="col-sm-12 col-sm-offset-2">
  <table class="table table-hover table-stripped table-responsive">
    <thead>
      <tr>
        <td colspan='2'>Buku</td>
        <td>Harga Satuan</td>
        <td>Kuantitas</td>
      </tr>
    </thead>
    <% @order.order_details.each do |order_detail| %>
      <tr>
        <td>
          <%= image_tag order_detail.book.image, width: 100, height: 100 %>
        </td>
        <td>
          <%= order_detail.book.title %>
        </td>

        <td>
          <%= money_amount(order_detail.unit_price) %>
        </td>

        <td>
          <%= order_detail.quantity%>
        </td>
      </tr>
    <% end %>
    <tfoot>
      <tr>
        <td colspan='2'></td>
        <td>total</td>
        <td><%= money_amount(@order.total_price) %></td>
      </tr>
    </tfoot>
  </table>
</div>
