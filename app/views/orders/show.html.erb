<div class="col-sm-12 col-sm-offset-2">
  <table class="table table-hover table-stripped table-responsive">
    <thead>
      <tr>
        <td colspan='2'>Buku</td>
        <td>Harga Satuan</td>
        <td>Kuantitas</td>
      </tr>
    </thead>
    <% @order.order_details.each do |order_detail|%>
      <tr>
        <td>
          <img src='https://images-na.ssl-images-amazon.com/images/I/51HWaRzG42L._SS100_.jpg' alt='iPhone'>
        </td>
        <td>
          <%= order_detail.book.title %>
        </td>

        <td>
          <%= money_amount(order_detail.unit_price) %>
        </td>

        <td>
          <div class="inline-block">
            <%= form_for order_detail, url: order_order_detail_path(order_id: @order.id, id: order_detail.id) do |f| %>
              <%= f.number_field :quantity, step: 1, min: 1, class: 'number-field' %>
              <%= f.submit 'update',  class: 'btn btn-warning btn-sm'%>
            <% end %>
          </div>
          <div class= "inline-block">
            <%= link_to 'delete', order_order_detail_path(id: order_detail, order_id: @order.id), method: :delete, confirm: 'are you sure?', class: 'btn btn-danger btn-sm', role: 'button'%>
          </div>
        </td>
      </tr>
    <% end %>
    <tfoot>
      <tr>
        <td colspan='2'></td>
        <td>total</td>
        <td><%= money_amount(@order.total_price) %></td>
      </tr>
    </tfoot>
  </table>
</div>
