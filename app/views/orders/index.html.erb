<div class="col-sm-8 col-sm-offset-2">
  <table class="table table-hover table-responsive">
    <thead>
      <tr>
        <td> order id</td>
        <td> order date</td>
        <td> status </td>
        <td> action </td>
      </tr>
    </thead>
    <% @orders.each do |order| %>
      <tr>
        <td> <%= order.id %></td>
        <td> <%= order.created_at.strftime("%d %B %Y") %>
        <td> <%= order.status %></td>
        <td> <%= link_to 'details', order_path(order) %></td>
      </tr>
    <% end %>
  </table>
</div>
