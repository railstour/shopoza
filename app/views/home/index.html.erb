<% @books.each do |book| %>
  <div class='col-sm-4'>
    <div class='thumbnail'>
      <div class='caption'>
        <h5><%= book.title %></h4>
        <h6><%= money_amount(book.price) %></h6>
      </div>
      <%= image_tag book.image,width: 150, height: 150 %>
      <div class='caption'>
        <p class='card-text card-summary'>
          <%= short_summary(book.summary,100, '#') %>
          <%= form_for @order_detail, url: orders_path do |f| %>
            <%= f.hidden_field :book_id, value: book.id %>
            <%= f.number_field :quantity, step: 1 %>
            <div class='btn-group'>
              <%= f.submit 'Add to Cart', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </p>
      </div>
    </div>
  </div>
<% end %>
